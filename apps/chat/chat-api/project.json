{
  "root": "apps/chat/chat-api",
  "sourceRoot": "apps/chat/chat-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/chat/chat-api",
        "main": "apps/chat/chat-api/src/main.ts",
        "tsConfig": "apps/chat/chat-api/tsconfig.app.json",
        "assets": [
          "apps/chat/chat-api/src/assets"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/chat/chat-api/src/environments/environment.ts",
              "with": "apps/chat/chat-api/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "chat-api:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/chat/chat-api/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/apps/chat-api"
      ],
      "options": {
        "jestConfig": "apps/chat/chat-api/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": [
    "scope:application"
  ]
}
