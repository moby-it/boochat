{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@boochat/application": ["libs/application/src/index.ts"],
      "@boochat/domain": ["libs/domain/src/index.ts"],
      "@boochat/persistence": ["libs/persistence/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
